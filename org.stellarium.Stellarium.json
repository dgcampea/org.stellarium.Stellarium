{
    "app-id": "org.stellarium.Stellarium",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "command": "stellarium",
    "rename-icon": "stellarium",
    "rename-appdata-file": "stellarium.appdata.xml",
    "rename-desktop-file": "stellarium.desktop",
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=pulseaudio",
        "--filesystem=home"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "*.a"
    ],
    "modules": [
        {
            "name": "stellarium",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DENABLE_MEDIA=1",
                "-DENABLE_GPS=1"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Stellarium/stellarium/releases/download/v0.18.3/stellarium-0.18.3.tar.gz",
                    "sha256": "e0772e73b5868eaec5f1a850aefa77085597ce00377faf3448f4659a0da3353c"
                }
            ]
        }
    ]
}
